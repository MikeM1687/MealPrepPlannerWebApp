@model MealPrepPlannerWebApp.ViewModels.AddMealViewModel

@{
    ViewData["Title"] = "AddMeal";
}

<h2>AddMeal</h2>

<h4>Meal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMeal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Ingredients" class="control-label"></label>
                <select asp-for="@Model.Ingredients" class ="form-control" asp-items="ViewBag.IngredientId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<div>
    <a class="btn btn-default" asp-action="AddIngredient">Create Ingredient</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
